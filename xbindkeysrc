"xbacklight -dec 10"
  XF86MonBrightnessDown
"xbacklight -inc 10"
  XF86MonBrightnessUp

"amixer -c 0 set Master 1dB- && ps -e | grep mplayer || mplayer .local/mac-os-x-10.5-leopard/sounds/Open.wav"
  XF86AudioLowerVolume
"amixer -c 0 set Master 1dB+ && amixer -D pulse set Master unmute && ps -e | grep mplayer || mplayer .local/mac-os-x-10.5-leopard/sounds/Open.wav"
  XF86AudioRaiseVolume

"amixer -c 0 set Master 1dB-"
  Control+XF86AudioLowerVolume
"amixer -c 0 set Master 1dB+ && amixer -D pulse set Master unmute"
  Control+XF86AudioRaiseVolume

"amixer -D pulse set Master toggle"
  XF86AudioMute

"i3lock -c 3f3f3f && xset dpms force off"
  XF86Display

"i3lock -c 3f3f3f"
  Control+Alt + l
