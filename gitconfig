[user]
  name = Dmitry Bushev
  email = bushevdv@gmail.com
[credential]
  helper = store
[core]
  editor = vim
  excludesfile = ~/.gitignore
[merge]
  tool = vimdiff
  conflictstyle = diff3
[push]
  default = simple
[tag]
  sort = version:refname
[alias]
  co = checkout
  ss = status
  # authors with number of commits
  authors = shortlog -s
  # stats of lines changed, expects ref to compare with
  # example: git shortstat "@{1 week ago}"
  shortstat = diff --shortstat
  # pretty commints log
  glog = log --graph --oneline --decorate
  # pretty log with names and dates
  namelog = log --graph --pretty=format:'%C(auto)%h %ad%d : %an %s' --date=relative
  # list of pulled changes
  fetchlog = log ORIG_HEAD.. --stat --no-merges
  gitkconflict = !gitk --left-right HEAD...MERGE_HEAD
[color]
  ui = auto
