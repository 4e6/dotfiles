[credential]
	helper = store
[core]
	editor = vim
	excludesfile = ~/.gitignore
[merge]
	tool = vimdiff
	conflictstyle = diff3
[push]
	default = simple
[tag]
	sort = version:refname
[alias]
	co = checkout
	ss = status
	plog = log --graph --pretty=format:'%C(auto)%h %ad%d : %an %s' --date=relative
	glog = log --graph --oneline --decorate
	fetchlog = log ORIG_HEAD.. --stat --no-merges
	gitkconflict = !gitk --left-right HEAD...MERGE_HEAD
[color]
	ui = auto
