[credential]
  helper = store
[core]
  editor = vim
  excludesfile = ~/.gitignore
[merge]
  tool = vimdiff3
  conflictstyle = diff3
[push]
  default = simple
[tag]
  sort = version:refname
[alias]
  co = checkout
  ss = status
  glog = log --pretty=format:'%C(auto)%h %ad%d : %an %s' --graph --date=relative
  onelog = log --graph --oneline --decorate
  fetchlog = log ORIG_HEAD.. --stat --no-merges
[color]
  ui = auto
