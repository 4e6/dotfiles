# sudo
alias sudo='sudo '
alias reboot='sudo reboot'
alias poweroff='sudo poweroff'
alias wifi-menu='sudo wifi-menu'
alias tlp='sudo tlp'
alias wifi='sudo wifi'
alias bluetooth='sudo bluetooth'

# util
alias ls='ls -h --color'
alias ll='ls -l'
alias la='ls -la'
alias -g grep='grep --color'

compdef ll=ls la=ls

# docker
alias -g inspectip="inspect --format '{{ .NetworkSettings.IPAddress }}'"
