"light -U 10"
  XF86MonBrightnessDown
"light -U 2"
  Control+XF86MonBrightnessDown
"light -A 10"
  XF86MonBrightnessUp
"light -A 2"
  Control+XF86MonBrightnessUp
"light -S 0.2"
  Control+Shift+XF86MonBrightnessDown
"light -S 100"
  Control+Shift+XF86MonBrightnessUp

"pamixer --decrease 3 && ps -e | grep mplayer || mplayer ~/.local/quake3/sounds/menu1.wav"
  XF86AudioLowerVolume
"pamixer --increase 3 && pamixer --unmute && ps -e | grep mplayer || mplayer ~/.local/quake3/sounds/menu1.wav"
  XF86AudioRaiseVolume

"pamixer --decrease 3"
  Control+XF86AudioLowerVolume
"pamixer --increase 3 && pamixer --unmute"
  Control+XF86AudioRaiseVolume

"amixer -D pulse set Master toggle"
  XF86AudioMute

"i3lock -c 3f3f3f && xset dpms force off"
  XF86Display
