# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
set $mic_led_toggle /home/4e6/.local/bin/sys_switch toggle /sys/devices/platform/thinkpad_acpi/leds/platform::micmute/brightness
set $bat_fullcharge sudo tlp fullcharge BAT0
set $bat_chargeonce sudo tlp chargeonce BAT0
set $mic_led_off /home/4e6/.local/bin/sys_switch 0 /sys/devices/platform/thinkpad_acpi/leds/platform::micmute/brightness
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $mic_led_toggle && $refresh_i3status
# Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 10 && $refresh_i3status
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 10 && $refresh_i3status
bindsym Control+XF86MonBrightnessUp exec --no-startup-id light -A 2 && $refresh_i3status
bindsym Control+XF86MonBrightnessDown exec --no-startup-id light -U 2 && $refresh_i3status
bindsym Control+Shift+XF86MonBrightnessUp exec --no-startup-id light -S 100 && $refresh_i3status
bindsym Control+Shift+XF86MonBrightnessDown exec --no-startup-id light -S 0.2 && $refresh_i3status
# Battery
bindsym XF86Favorites exec --no-startup-id $bat_fullcharge && notify-send fullcharge
bindsym Control+XF86Favorites exec --no-startup-id $bat_chargeonce && notify-send chargeonce

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
